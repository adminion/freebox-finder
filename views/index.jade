doctype html
html(lang="en")
    head
        meta(name="viewport", content="initial-scale=1.0, user-scalable=no")
        link(rel="stylesheet", href="/bootstrap.min.css")
        title Freebox Finder - Find/list freeboxes in your area

        style(type="text/css")
            | html { height: 100% }
            | body { height: 100%; margin: 0; padding: 0 }
            | #map-canvas { height: 100% }
    body
        #head
            #page-title
                .container
                    h1 Free-box Finder
            #location
                #current-location
                    .container
            #set-location
                .container
                    label(for="new-location") Set Location
                    input(id="new-location")
                    button(id="set-location-now") Set
            #search
                .container
                    #search-tags
                        label(for="search-tags-input") Search Tags
                        input(id="tags")
                    #search-range
                        label(for="miles") Within Miles
                        input(id="miles", type="number", value=1)
                        button(id="search-now") Search
        #map-canvas(style="width: 100%; height: 50%") this is the map
        #list
            .container
        script(src="/jquery-1.11.1.js")
        // bootstrap - Latest compiled and minified JavaScript
        script(src="/bootstrap.min.js")
        script(src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDbdCuzVMY5_X5LN4hwNwkteCVxkJayCWM")
        script(src="/socket.io/socket.io.js")
        script(src="/scripts.js")
