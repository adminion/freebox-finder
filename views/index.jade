doctype html
html(lang="en")
    head
        meta(name="viewport", content="initial-scale=1.0, user-scalable=no")
        link(rel="stylesheet", href="/bootstrap.min.css")
        link(rel="stylesheet", href="/freebox-finder.css")
        title Freebox Finder - Find/list freeboxes in your area
    body
        #head
            #fork-me
                a(href="https://github.com/adminion/freebox-finder")
                    img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://camo.githubusercontent.com/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67", alt="Fork me on GitHub", data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png")
            #page-title
                .container
                    h1 Free-box Finder
            #cityState
                .container
            #nav
                ul(class="nav nav-tabs", role="tablist")
                    li.active
                        a(href="#nav-search", data-toggle="tab", role="tab") Search 
                    li
                        a(href="#nav-location", data-toggle="tab", role="tab") Location
                    li
                        a(href="#nav-new-box", data-toggle="tab" role="tab") New Box
                .tab-content
                    div(id="nav-search", class="tab-pane active")
                        .row &nbsp;
                        .row
                            .input-boxes
                                input(id="tags", placeholder="books, clothes, music, etc.")
                                | &nbsp;
                                button(id="search-now") Search
                        .row &nbsp;
                    div(id="nav-location", class="tab-pane")
                        .row &nbsp;
                        .row
                            .input-boxes
                                input(id='track-location', type='checkbox')
                                | &nbsp;
                                label(for='track-location') Track Position
                        .row
                            div(class="info", id="current-location")
                                .container
                        .row
                            .input-boxes
                                input(id="new-location", size="50", placeholder="portland, or")
                                | &nbsp;
                                button(id="set-location-now") Set Location
                        .row &nbsp;
                    div(id="nav-new-box", class="tab-pane")
                        .row &nbsp;
                        .row
                            .input-boxes
                                .row
                                    input(id='new-box-tags', placeholder='books, clothes, music, etc.')
                                .row
                                    input(id='new-box-location', size="50")
                                .row
                                    button(id="new-box-now") List FreeBox
        #map-canvas
            p 
        #boxes-list
            h3 Search Results
            #results
        #footer
            a(id="termsTrigger") Terms and Conditions
            #terms
                p=license
        script(src="/jquery-1.11.1.js")
        // bootstrap - Latest compiled and minified JavaScript
        script(src="/bootstrap.min.js")
        script(src="http://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyDbdCuzVMY5_X5LN4hwNwkteCVxkJayCWM")
        script(src="/socket.io/socket.io.js")
        script(src="/utils.js")
        script(src="/freebox-finder.js")
        script(src="/scripts.js")
